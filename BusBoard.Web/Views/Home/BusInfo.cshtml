@model List<BusBoard.Api.BusStop>
@{
  ViewBag.Title = "Bus Information";
}

<h2>BusInfo</h2>

<div class="row">
    @for (var j = 0; j < @Model.Count; j++)
    {
        <p>The next 5 buses at @Model[j].StopName are:</p>
        for (var i = 0; i < @Model[0].BusList.Count; i++)
         {
             <p>@Model[j].BusList[i].id towards @Model[j].BusList[i].destinationName in the direction of @Model[j].BusList[i].towards arriving in @Model[j].BusList[i].timeToStation mins</p>
         }
        <p> </p>
         
    }
    


</div>
